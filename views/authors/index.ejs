<div class="show">
  <h2>Search Author</h2>
  <form action="/authors" method="get">
    <div class="form-controle">
      <label for="name">Name</label>
      <input type="text" name="name" value="<%= searchOption %>" />
      <div class="cc-wrapper"><button type="submit">Search</button></div>
    </div>
  </form>
  <br />

  <% authors.forEach(author=> { %>
  <div class="all-authors">
    <div class="author-name"><%= author.name %></div>
    <div class="btns">
      <a href="/authors/<%= author.id  %>"> <button>View</button> </a
      ><a href="/authors/<%= author.id  %>/edit"> <button>Edit</button> </a>
      <%- include("../partials/delete.ejs", {url: `/authors/${ author.id }`} )
      %>
    </div>
  </div>
  <% }) %>
</div>
